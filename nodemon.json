{
  "restartable": "rs",
  "ignore": [".git", "node_modules/**/node_modules"],
  "verbose": true,
  "inspect": true,
  "execMap": {
    "ts": "node --require ts-node/register",
    "js": "node --require ts-node/register"
  },
  "exec": "node --inspect=0.0.0.0:9231 -r ts-node/register ./src/index.js",
  "watch": ["src/"],
  "env": {
    "NODE_ENV": "development"
  },
  "ext": "js,json,ts"
}
